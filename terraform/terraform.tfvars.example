# AWS Configuration
aws_region = "us-east-1"

# Common Tags
tags = {
  Environment = "production"
  Project     = "tcg-marketplace"
  ManagedBy   = "terraform"
}

# Cognito Configuration
user_pool_name              = "tcg-marketplace-users"
cognito_client_name         = "tcg-marketplace-client"
cognito_auto_verified_attributes = ["email"]
cognito_email_sending_account    = "COGNITO_DEFAULT"
cognito_verification_email_option = "CONFIRM_WITH_CODE"
cognito_password_minimum_length   = 8
cognito_password_require_lowercase = true
cognito_password_require_numbers   = true
cognito_password_require_symbols   = true
cognito_password_require_uppercase = true
cognito_explicit_auth_flows = [
  "ALLOW_USER_PASSWORD_AUTH",
  "ALLOW_REFRESH_TOKEN_AUTH",
  "ALLOW_USER_SRP_AUTH",
]
cognito_generate_client_secret      = false
cognito_refresh_token_validity_days = 30

# Redis Configuration
vpc_id                      = "vpc-xxxxxxxxxxxxxxxxx"
private_subnets             = ["subnet-xxxxxxxxxxxxxxxxx", "subnet-yyyyyyyyyyyyyyyyy"]
ecs_security_group_id       = "sg-xxxxxxxxxxxxxxxxx"
redis_node_type             = "cache.t3.micro"
redis_engine_version        = "7.0"
redis_replication_group_id  = "tcg-marketplace-redis"
redis_description           = "Redis replication group for tcg-marketplace"
redis_num_cache_clusters    = 1
redis_automatic_failover_enabled = false
redis_secret_name              = "tcg-marketplace/redisAuthToken/production"
redis_secret_description       = "Redis AUTH token for tcg-marketplace production"
redis_subnet_group_name        = "tcg-marketplace-redis-subnet-group"
redis_security_group_name      = "tcg-marketplace-redis-sg"
redis_security_group_description = "Security group for tcg-marketplace Redis cluster"

